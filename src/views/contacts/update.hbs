<div class="container w-25 border border-primary mt-lg-3 rounded">
        <h4 class="card-title text-center mt-4 mb-4">Enter new contact information</h4>
        <form class=" mt-2" action="/contacts/edit/{{Contacto.id}}" method="POST">
            <div class="form-group">
                <label for="exampleFormControlInput1">Contact Name </label>
                <input type="text" name="contactName" class="form-control" id="exampleFormControlInput1" placeholder="Contact Name" value="{{Contacto.nombre}}">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Telephone</label>
                <input type="tel" name="telephone" class="form-control" id="exampleFormControlInput1" placeholder="Telephone" value="{{Contacto.telefono}}">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Description</label>
                <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="2" >{{Contacto.descripcion}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" class=" btn btn-block btn-primary">Save</button>
            </div>
        </form>
</div>